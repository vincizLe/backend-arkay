{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2019",
		"sourceMap": true,
		"outDir": "./dist",
		"allowJs": false,
		"incremental": true,
		"skipLibCheck": true,
		"baseUrl": "./"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
